<Window x:Class="ThanksCard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <ContentControl prism:RegionManager.RegionName="HeaderRegion" />
            <ContentControl prism:RegionManager.RegionName="MenuRegion" />
            <ContentControl prism:RegionManager.RegionName="ContentRegion" />
            <ContentControl prism:RegionManager.RegionName="FooterRegion" />
        </StackPanel>
    </Grid>
</Window>